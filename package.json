{
  "name": "@arkitect-ui/repo",
  "version": "1.0.0",
  "license": "MIT",
  "description": "Arkitec-ui set of components for SolidJs and React",
  "scripts": {
    "lint-staged": "lint-staged --allow-empty",
    "clean": "rm -rf node_modules dist pnpm-lock.yaml && pnpm store prune & find . -type d \\( -name 'node_modules' -o -name 'dist' -o -name '.output' -o -name '.vinxi' -o -name '.cache' -o -name '.expo' -o -name '.nx' \\) -prune -exec rm -rf {} + & wait",
    "prepare": "husky && ts-patch install -s",
    "build:affected": "pnpm nx affected --target=build",
    "test:affected": "pnpm nx affected --target=test",
    "typecheck:affected": "pnpm nx affected --target=typecheck",
    "lint": "pnpm exec oxlint && pnpm exec dprint check",
    "lint:fix": "pnpm exec oxlint --fix && pnpm exec dprint fmt",
    "lint:affected": "pnpm nx affected --target=lint",
    "lint:many": "pnpm nx run-many --target=lint && pnpm exec dprint check",
    "publish:affected": "pnpm nx publish-affected",
    "release:affected": "pnpm nx release-affected",
    "release:affected:dry-run": "pnpm nx release-affected-dry-run",
    "registry:build": "mkdir -p apps/docs/public/r/r apps/docs/public/r/s && pnpm exec shadcn build --output apps/docs/public/r"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "pnpm exec oxlint --fix",
      "pnpm exec dprint fmt --allow-no-files"
    ]
  },
  "devDependencies": {
    "@effect/language-service": "catalog:",
    "@nx/js": "catalog:",
    "@nx/node": "catalog:",
    "@nx/react": "catalog:",
    "@nx/storybook": "catalog:",
    "@nx/vite": "catalog:",
    "@nx/vitest": "22.4.5",
    "@nx/web": "catalog:",
    "@swc-node/register": "catalog:",
    "@swc/core": "catalog:",
    "@swc/helpers": "catalog:",
    "@types/node": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@vitejs/plugin-react": "catalog:",
    "@vitest/ui": "catalog:",
    "dprint": "catalog:",
    "husky": "catalog:",
    "jiti": "catalog:",
    "lint-staged": "catalog:",
    "nx": "22.4.5",
    "nx-oxlint": "catalog:",
    "oxlint": "1.42.0",
    "shadcn": "catalog:",
    "ts-patch": "catalog:",
    "tslib": "catalog:",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vitest": "catalog:"
  },
  "pnpm": {
    "packageExtensions": {
      "starlight-sidebar-topics": {
        "peerDependencies": {
          "astro": "*"
        }
      },
      "better-auth": {
        "dependencies": {
          "zod": "^4.3.6"
        }
      }
    },
    "overrides": {
      "@types/react": "19.1.13",
      "@types/react-dom": "19.1.9"
    },
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "@prisma/client",
      "@prisma/engines",
      "@swc/core",
      "@tailwindcss/oxide",
      "better-sqlite3",
      "core-js",
      "dprint",
      "esbuild",
      "msgpackr-extract",
      "nx",
      "prisma",
      "unrs-resolver"
    ],
    "ignoredBuiltDependencies": [
      "bun"
    ]
  },
  "packageManager": "pnpm@10.29.3",
  "dependencies": {
    "vite-tsconfig-paths": "catalog:"
  }
}
