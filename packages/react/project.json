{
  "name": "@arkitect-ui/react",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/react/src",
  "projectType": "library",
  "tags": ["type:ui", "scope:shared"],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "packages/react/dist",
        "configFile": "packages/react/vite.config.ts",
        "generatePackageJson": true
      }
    },
    "lint": {
      "executor": "nx-oxlint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/react/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "test": {
      "executor": "@nx/vitest:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "{workspaceRoot}/coverage/packages/react"
      }
    },
    "serve:storybook": {
      "executor": "@nx/storybook:storybook",
      "options": {
        "port": 4848,
        "configDir": "packages/react/.storybook"
      }
    },
    "build:storybook": {
      "executor": "@nx/storybook:build",
      "options": {
        "configDir": "packages/react/.storybook",
        "outputDir": "packages/react/storybook-static"
      }
    }
  }
}
