{
  "extends": "@arkitect-ui/monorepo-tools/tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "",
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@/lib/*": ["../shared/src/lib/*"],
      "@/components/ui/*": ["./src/components/ui/*"]
    }
  },
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.js",
    "src/**/*.test.js",
    "src/**/*.spec.tsx",
    "src/**/*.test.tsx",
    "src/**/*.spec.jsx",
    "src/**/*.test.js"
  ],
  "include": [
    "src/**/*.stories.ts",
    "src/**/*.stories.js",
    "src/**/*.stories.jsx",
    "src/**/*.stories.tsx",
    "src/**/*.stories.mdx",
    ".storybook/*.js",
    ".storybook/*.ts"
  ]
}
