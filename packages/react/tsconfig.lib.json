{
  "extends": "@arkitect-ui/monorepo-tools/tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "outDir": "dist",
    "composite": false,
    "declaration": true,
    "noEmit": false,
    "types": ["node", "vite/client"],
    "baseUrl": ".",
    "rootDirs": ["./src", "../../shared/src"],
    "paths": {
      "@/lib/*": ["../shared/src/lib/*"],
      "@/components/ui/*": ["./src/components/ui/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.tsx",
    "src/**/*.test.tsx",
    "src/**/*.spec.js",
    "src/**/*.test.js",
    "src/**/*.spec.jsx",
    "src/**/*.test.jsx"
  ]
}
