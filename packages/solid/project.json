{
  "name": "@arkitect-ui/solid",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/solid/src",
  "projectType": "library",
  "tags": ["type:ui", "scope:shared"],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "packages/solid/dist",
        "configFile": "packages/solid/vite.config.ts",
        "generatePackageJson": true
      }
    },
    "lint": {
      "executor": "nx-oxlint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/solid/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "test": {
      "executor": "@nx/vitest:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "{workspaceRoot}/coverage/packages/solid"
      }
    }
  }
}
